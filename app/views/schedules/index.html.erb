<h1>Listing schedules</h1>

<div id="schedule_list">
<table>
  <tr>
    <th></th>
    <th>Date</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td>
      <%= form_tag(:controller=>"schedules", :action=>"tweet") do %>
        <%= hidden_field_tag(:date, schedule.date) %>
        <%= hidden_field_tag(:location, schedule.location) %>
        <%= submit_tag("tweet") %>
      <% end %>
    </td>
    <td><%= schedule.date %></td>
    <td><%= schedule.location %></td>
    <td><%= link_to 'Show', schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<table>
<% @next_schedules.each do |schedule| %>
  <tr>
    <td>
      <%= form_tag(:controller=>"schedules", :action=>"tweet") do %>
        <%= hidden_field_tag(:date, schedule.date) %>
        <%= hidden_field_tag(:location, schedule.location) %>
        <%= submit_tag("tweet") %>
      <% end %>
    </td>
    <td><%= schedule.date %></td>
    <td><%= schedule.location %></td>
    <td><%= link_to 'Show', schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New Schedule', new_schedule_path %>
</div>

<% if !request.smart_phone? %>
<div id="timeline">
  <dl>
    <% @timeline.each do |t| %>
    <dt><%= image_tag t.user.profile_image_url, size: '40x40' %></dt>
    <dd><%= t.user.name %></dd>
    <dd><%= t.text %></dd>
    <% end %>
  </dl>
<br />
</div>
<% end %>
