<!DOCTYPE html>
<html>
<head>
  <title>AirDolphinsBot</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <span id="team">AirDolphins</span>
<% if current_user %>
  <span class="logout">Hello <%= current_user.name %> @<%= current_user.screen_name %> <%= link_to 'ログアウト', logout_path %></span>
  <div id="main">
    <%= yield %>
  </div>
<% else %>
  <div class="login"><span><%= link_to 'Twitterでログイン', '/auth/twitter' %></span></div>
<% end %>
</body>
</html>
